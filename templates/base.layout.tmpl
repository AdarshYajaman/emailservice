{{define "base"}}
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Responsive Email</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        line-height: 1.6;
        color: #333;
        margin: 0;
        padding: 0;
      }
      .container {
        width: 100%;
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 5px;
        background-color: #f9f9f9;
      }
      .header {
        background-color: #007bff;
        color: #fff;
        padding: 10px;
        text-align: center;
      }
      .content {
        padding: 20px;
      }
      .footer {
        text-align: center;
        padding: 10px;
        font-size: 0.9em;
        color: #777;
      }
      @media (max-width: 600px) {
        .container {
          padding: 10px;
        }
        .content {
          padding: 10px;
        }
      }
    </style>
  </head>
  <body>
    {{block "content" .}}

    {{ end }}
  </body>
</html>
{{ end }}
